<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="10dp"
    android:background="@drawable/loan_bg"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:id="@+id/rlTimeline"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_gravity="center_vertical"
            android:id="@+id/tvDot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@mipmap/success" />
        <TextView
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:id="@+id/tvAcceptStation"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="[深圳市]"
            android:textColor="#5A617A"
            android:textSize="14sp" />
        <TextView
            android:layout_marginLeft="10dp"
            android:id="@+id/tvAcceptTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2014/06/24 20:55:28"
            android:textColor="#AEB3C2"
            android:textSize="12sp" />

    </LinearLayout>
    <LinearLayout
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView

                android:text="审批金额"
                android:textSize="13sp"
                android:textColor="#9DA4B7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal"
                android:id="@+id/tv_year"
                android:text="2018-06-02"
                android:textColor="#33A0FF"
                android:textSize="14sp"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_time"
                android:text="17:55:33"
                android:textColor="#000"
                android:textSize="20sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:textColor="#9DA4B7"
                android:text="综合服务费"
                android:drawableRight="@mipmap/wenhao"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:id="@+id/tv_remaintime"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="已逾期2天"
                android:textColor="#33A0FF"
                android:textSize="14sp" />


        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="到账金额"
                android:textColor="#9DA4B7"
                android:textSize="13sp" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_interest"
                android:text="本金的1.00%"
                android:textColor="#33A0FF"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>
        <LinearLayout
            android:layout_weight="1"
            android:gravity="center"
            android:layout_alignParentRight="true"
            android:orientation="vertical"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">
            <TextView
                android:text="还款天数"
                android:textColor="#9DA4B7"
                android:textSize="13sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_loantime"
                android:text="7tian"
                android:textColor="#33A0FF"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>