<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.qqlaobing.money.com.example.qqlaobing.Umoney.view.activity.LoanActivity">

    <RelativeLayout
        android:background="@drawable/title_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/cancel"
            android:layout_width="10dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="借款详情"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/center_bg"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <View
                android:layout_centerVertical="true"
                android:background="#222"
                android:layout_width="2dp"
                android:layout_height="15dp"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:text="标准借款"
                android:textSize="14sp"
                android:textColor="#5A617A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_loanmoney"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="#5A617A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginBottom="10dp"
            android:layout_marginTop="5dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:text="借款到账"
                android:textSize="14sp"
                android:textColor="#999"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_money"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="#33A0FF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@drawable/center_bg"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:text="借款期限"
                android:textSize="14sp"
                android:textColor="#5A617A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_time"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp" android:textSize="14sp"
                android:textColor="#33A0FF"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>
    <LinearLayout
        android:gravity="center_vertical"
        android:background="@drawable/center_bg"
        android:layout_margin="10dp"
        android:padding="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:layout_marginLeft="10dp"
                android:text="每期应还金额"
                android:textSize="14sp"
                android:textColor="#5A617A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_money_huan"
                android:layout_alignParentRight="true"
                android:layout_marginLeft="10dp"
                android:textSize="14sp"
                android:textColor="#5A617A"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>
    <TextView
        android:layout_marginTop="10dp"
        android:layout_marginLeft="20dp"
        android:text="温馨提示："
        android:textSize="12sp"
        android:textColor="#111"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_marginTop="5dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="10dp"
        android:text="逾期一定期限将会进行短信、语音以及人工的还款提醒，逾期超过30天将会提交仲裁，同时您的逾期信息将报至央行征信系统。"
        android:textSize="12sp"
        android:textColor="#888"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/btn_loan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/btn_allshap"
        android:text="确认"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>
