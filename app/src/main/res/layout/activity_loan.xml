<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#f5f5f5"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context="com.example.qqlaobing.money.com.example.qqlaobing.Umoney.view.activity.LoanActivity">

    <RelativeLayout
        android:background="@drawable/title_bg"
        android:layout_width="match_parent"
        android:layout_height="40dp">
        <ImageView
            android:id="@+id/iv_cancel"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:background="@mipmap/cancel"
            android:layout_width="10dp"
            android:layout_height="20dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="确认申请借款"
            android:textColor="#fff"
            android:textSize="16sp"
            android:layout_marginLeft="30dp"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <LinearLayout
        android:background="@drawable/center_bg"
        android:layout_margin="10dp"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="借款金额"
            android:textSize="14sp"
            android:textColor="#5A617A"
            android:layout_margin="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <LinearLayout
            android:paddingLeft="10dp"
            android:paddingRight="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <EditText
                android:hint="请输入金额"
                android:gravity="center"
                android:id="@+id/tv_danqi"
                android:layout_weight="1"
                android:background="@mipmap/danqi"
                android:textColor="#33A0FF"
                android:textSize="23sp"
                android:layout_width="match_parent"
                android:layout_height="70dp" />
            <TextView
                android:text="￥3000.00"
                android:gravity="center"
                android:id="@+id/tv_fenqi"
                android:layout_marginLeft="10dp"
                android:layout_weight="1"
                android:background="@mipmap/fenqi"
                android:textColor="#7B7D87"
                android:textSize="23sp"
                android:layout_width="match_parent"
                android:layout_height="70dp" />
        </LinearLayout>
        <TextView
            android:text="按时还款有助力于提升额度"
            android:textSize="14sp"
            android:drawableLeft="@mipmap/naozhong"
            android:drawablePadding="10dp"
            android:textColor="#9DA4B7"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="15dp"
            android:layout_marginBottom="20dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:background="@drawable/center_bg"
        android:orientation="vertical"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:background="#fff"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:text="借款期限"
                android:textSize="14sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <Spinner
                android:layout_alignParentRight="true"
                android:id="@+id/tv_loantime"
                android:layout_marginLeft="40dp"
                android:layout_gravity="right"
                android:textColor="#2b2b2b"
                android:layout_width="100dp"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <LinearLayout
            android:visibility="gone"
            android:layout_marginTop="10dp"
            android:background="#fff"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:text="到款金额"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:id="@+id/tv_getmoney"
                android:layout_marginLeft="40dp"
                android:text="10000元"
                android:textColor="#2b2b2b"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="2dp"
            android:background="#fff"
            android:padding="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:text="收款账号"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:gravity="right"
                android:id="@+id/tv_bank"
                android:layout_marginLeft="40dp"
                android:textColor="#2b2b2b"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </LinearLayout>

    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <CheckBox
            android:id="@+id/cb_checkbox"
            android:textColor="#dbbf91"
            android:text="同意"
            android:layout_marginLeft="20dp"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
        <TextView
            android:id="@+id/tv_agree"
            android:textColor="@color/colorAccent"
            android:layout_marginTop="10dp"
            android:text="《用户协议》"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </LinearLayout>



    <Button
        android:id="@+id/btn_loan"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:layout_margin="20dp"
        android:background="@drawable/btn_allshap"
        android:text="下一步"
        android:textColor="#fff"
        android:textSize="16sp" />

</LinearLayout>
