<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:layout_width="match_parent"
android:orientation="vertical"
android:background="#eee"
android:layout_height="match_parent"
tools:context="com.example.qqlaobing.loanmoney.view.activity.LoginActivity">

<RelativeLayout
    android:visibility="gone"
    android:background="@color/all"
    android:layout_width="match_parent"
    android:layout_height="50dp">
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#fff"
        android:text="登录"
        android:layout_centerInParent="true"/>
</RelativeLayout>
    <ImageView
        android:id="@+id/iv_logo"
        android:background="@mipmap/yimiaodao"
        android:layout_marginTop="50dp"
        android:layout_gravity="center_horizontal"
        android:layout_width="100dp"
        android:layout_height="100dp" />
<EditText
    android:textSize="14sp"
    android:id="@+id/et_username"
    android:drawableLeft="@mipmap/phone"
    android:padding="10dp"
    android:hint="请输入11位手机号"
    android:drawablePadding="10dp"
    android:background="@drawable/et_login_bg"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="40dp"
    android:layout_width="match_parent"
    android:layout_height="50dp" />
<LinearLayout
    android:orientation="horizontal"
    android:id="@+id/ll_change"
    android:layout_marginTop="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <EditText
        android:textSize="14sp"
        android:id="@+id/et_validatecode"
        android:layout_weight="1"
        android:drawableLeft="@mipmap/password"
        android:padding="10dp"
        android:hint="请输入验证码"
        android:drawablePadding="10dp"
        android:background="@drawable/et_login_bg"
        android:layout_width="match_parent"
        android:layout_height="50dp" />
    <com.example.qqlaobing.Umoney.view.myview.TimeButton
        android:id="@+id/btn_getcode"
        android:paddingRight="20dp"
        android:paddingLeft="20dp"
        android:layout_marginLeft="10dp"
        android:background="@drawable/tv_login_bg"
        android:gravity="center"
        android:textColor="#fff"
        android:text="获取验证码"
        android:layout_width="wrap_content"
        android:layout_height="50dp" />
</LinearLayout>
<EditText
    android:inputType="textPassword"
    android:singleLine="true"
    android:visibility="gone"
    android:maxLines="16"
    android:textSize="14sp"
    android:id="@+id/et_password"
    android:drawableLeft="@mipmap/password"
    android:padding="10dp"
    android:hint="请输入6-16位字符密码"
    android:drawablePadding="10dp"
    android:background="@drawable/et_login_bg"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="50dp" />
    <LinearLayout
        android:visibility="gone"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="50dp">
        <RelativeLayout
            android:id="@+id/rl_mima"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/all"
                android:id="@+id/tv_password1"
                android:layout_centerInParent="true"
                android:text="密码登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_line"
                android:layout_centerHorizontal="true"
                android:background="#fff"
                android:layout_alignParentBottom="true"
                android:layout_width="100dp"
                android:layout_height="2dp" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/rl_dongtai"
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="match_parent">
            <TextView
                android:textColor="@color/all"
                android:id="@+id/tv_change_password1"
                android:layout_centerInParent="true"
                android:text="动态密码登录"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:visibility="gone"
                android:id="@+id/tv_change_line"
                android:layout_centerHorizontal="true"
                android:background="@color/all"
                android:layout_alignParentBottom="true"
                android:layout_width="100dp"
                android:layout_height="2dp" />
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:visibility="gone"
        android:id="@+id/rl_duanxin"
    android:layout_marginRight="20dp"
    android:layout_marginLeft="20dp"
    android:layout_marginTop="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:id="@+id/tv_change_password"
        android:textColor="@color/title"
        android:textSize="12sp"
        android:text="短信验证码登录"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />
    <TextView
        android:id="@+id/tv_error"
        android:layout_alignParentRight="true"
        android:textColor="@color/title"
        android:textSize="12sp"
        android:text="忘记密码"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>
    <RelativeLayout

        android:id="@+id/rl_password"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginTop="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:id="@+id/tv_password"
            android:textColor="@color/title"
            android:textSize="12sp"
            android:text="密码登录"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
        <TextView
            android:id="@+id/tv_registe"
            android:layout_alignParentRight="true"
            android:textColor="@color/title"
            android:textSize="12sp"
            android:text="前往注册"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" />
    </RelativeLayout>



    <Button
    android:id="@+id/btn_login"
    android:layout_marginTop="30dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@drawable/tv_login_bg"
    android:gravity="center"
    android:textColor="#fff"
    android:text="登录"
    android:textSize="16sp"
    android:layout_width="match_parent"
    android:layout_height="40dp" />
</LinearLayout>

